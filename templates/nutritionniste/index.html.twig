                            <option value="Nutrition Sportive">Nutrition Sportive</option>
                            <option value="Diététique Thérapeutique">Diététique Thérapeutique</option>
                            <option value="Nutrition Pédiatrique">Nutrition Pédiatrique</option>
                            <option value="Perte de Poids">Perte de Poids</option>
                            <option value="Nutrition Végétarienne">Nutrition Végétarienne</option>
                        </select>
                    </div>
                </div>
                <div style="display: flex; gap: 15px; justify-content: flex-end;">
                    <button onclick="resetFilters()" style="padding: 12px 30px; border: 2px solid var(--gray); border-radius: 25px; font-weight: 600; cursor: pointer; transition: var(--transition); font-size: 0.95rem; background: transparent; color: var(--gray);">
                        <i class="fas fa-redo"></i> Réinitialiser
                    </button>
                    <button onclick="applyFilters()" style="padding: 12px 30px; border: none; border-radius: 25px; font-weight: 600; cursor: pointer; transition: var(--transition); font-size: 0.95rem; background: var(--secondary); color: white;">
                        <i class="fas fa-filter"></i> Filtrer les résultats
                    </button>
                </div>
            </div>

            <!-- Grille des nutritionnistes -->
            <div class="nutritionnistes-grid">
                {% for nutritionniste in nutritionnistes %}
                    <div class="nutritionniste-card"
                         data-ville="{{ nutritionniste.ville }}"
                         data-specialite="{{ nutritionniste.specialite }}"
                         data-tarif="{{ nutritionniste.tarif|default(0) }}">

                        <div class="card-header">
                            <div class="nutritionniste-avatar">
                                {{ nutritionniste.nom|replace({'Dr. ': ''})|first|upper }}
                            </div>
                            <span class="badge-specialite">{{ nutritionniste.specialite }}</span>

                            <!-- Bouton Supprimer (uniquement pour ceux de la BD) -->
                            {% if nutritionniste.source is defined and nutritionniste.source == 'database' %}
                                <a href="{{ path('app_nutritionniste_supprimer', {'id': nutritionniste.id|replace({'db_': ''})}) }}"
                                   class="btn-supprimer"
                                   onclick="return confirm('Voulez-vous vraiment supprimer ce nutritionniste ?');"
                                   title="Supprimer ce nutritionniste">
                                    <i class="fas fa-trash"></i>
                                </a>
                            {% endif %}

                            <!-- Badge source - Uniquement pour les entrées de la base de données -->
                            {% if nutritionniste.source is defined and nutritionniste.source == 'database' %}
                                <span class="badge-source badge-database">
                                    <i class="fas fa-database"></i> Base de données
                                </span>
                            {% endif %}
                        </div>

                        <div class="card-body">
                            <h3 class="nutritionniste-name">{{ nutritionniste.nom }}</h3>
                            <div class="nutritionniste-ville">
                                <i class="fas fa-map-marker-alt"></i>
                                {{ nutritionniste.ville }}
                            </div>

                            <div style="margin-bottom: 20px;">
                                <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 12px; font-size: 0.95rem;">
                                    <i class="fas fa-graduation-cap" style="color: var(--primary); width: 20px; text-align: center;"></i>
                                    <span>Nutritionniste Diplômé(e)</span>
