                            <div class="contact-info">
                                <div class="contact-label">Coordonnées :</div>
                                <div class="contact-details">
                                    <div><strong>Tél :</strong> {{ nutritionniste.telephone }}</div>
                                    {% if nutritionniste.email %}
                                        <div><strong>Email :</strong> {{ nutritionniste.email }}</div>
                                    {% endif %}
                                    {% if nutritionniste.adresse %}
                                        <div><strong>Adresse :</strong> {{ nutritionniste.adresse }}</div>
                                    {% endif %}
                                    {% if nutritionniste.site_web %}
                                        <div><strong>Site web :</strong> {{ nutritionniste.site_web }}</div>
                                    {% endif %}
                                    {% if nutritionniste.tarif %}
                                        <div><strong>Tarif indicatif :</strong> {{ nutritionniste.tarif }} TND</div>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="disclaimer-note">
                                <i class="fas fa-exclamation-circle"></i>
                                Contactez directement le nutritionniste pour prendre rendez-vous
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Message si aucun résultat -->
            {% if nutritionnistes|length == 0 %}
                <div style="text-align: center; padding: 60px 20px;">
                    <i class="fas fa-user-md" style="font-size: 4rem; color: var(--gray); margin-bottom: 20px;"></i>
                    <h3 style="color: var(--gray); margin-bottom: 15px;">Aucun nutritionniste disponible</h3>
                    <p style="color: var(--gray);">Aucun nutritionniste n'est actuellement référencé dans notre annuaire.</p>
                </div>
            {% endif %}
        </div>
    </div>

    <script>
        // Gestion des filtres
        function applyFilters() {
            const ville = document.getElementById('ville').value;
            const specialite = document.getElementById('specialite').value;

            const cards = document.querySelectorAll('.nutritionniste-card');
            let visibleCount = 0;

            cards.forEach(card => {
                const cardVille = card.getAttribute('data-ville');
                const cardSpecialite = card.getAttribute('data-specialite');

                const villeMatch = !ville || cardVille === ville;
                const specialiteMatch = !specialite || cardSpecialite === specialite;

                if (villeMatch && specialiteMatch) {
                    card.style.display = 'flex';
                    card.style.animation = 'fadeInUp 0.5s ease-out';
                    visibleCount++;
                } else {
                    card.style.display = 'none';
                }
            });

            // Afficher un message si aucun résultat
            const noResults = document.querySelector('.no-results-message');
            if (visibleCount === 0) {
                if (!noResults) {
                    const message = document.createElement('div');
                    message.className = 'no-results-message';
                    message.style.textAlign = 'center';
                    message.style.padding = '40px';
                    message.style.color = 'var(--gray)';
                    message.innerHTML = `
                        <i class="fas fa-search" style="font-size: 3rem; margin-bottom: 20px; color: var(--gray);"></i>
                        <h3>Aucun nutritionniste ne correspond à vos critères</h3>
                        <p>Essayez de modifier vos filtres de recherche</p>
                    `;
                    document.querySelector('.nutritionnistes-grid').appendChild(message);
                }
            } else if (noResults) {
                noResults.remove();
            }
        }

        function resetFilters() {
            document.getElementById('ville').value = '';
            document.getElementById('specialite').value = '';

            const cards = document.querySelectorAll('.nutritionniste-card');
            cards.forEach(card => {
                card.style.display = 'flex';
                card.style.animation = 'fadeInUp 0.5s ease-out';
            });

            const noResults = document.querySelector('.no-results-message');
            if (noResults) {
                noResults.remove();
            }
        }

        // Animation au scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, {
                threshold: 0.1,
