            <div class="search-container">
                <input type="text" class="search-input" placeholder="Rechercher un exercice, un coach, une durée...">
                <button class="search-btn">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </section>

        <!-- STATS -->
        <div class="stats-section">
            <div class="stat-item">
                <h2>{{ videos|length }}+</h2>
                <p>Vidéos d'exercices</p>
            </div>
            <div class="stat-item">
                <h2>6</h2>
                <p>Catégories différentes</p>
            </div>
            <div class="stat-item">
                <h2>500K+</h2>
                <p>Membres actifs</p>
            </div>
            <div class="stat-item">
                <h2>4.9</h2>
                <p>Note moyenne</p>
            </div>
        </div>

        <!-- CATÉGORIES -->
        <h2 class="section-title">Catégories Populaires</h2>

        <div class="categories-grid">
            <!-- Cardio -->
            <div class="category-card" data-category="cardio" style="border-left-color: var(--accent-cardio);">
