                                    alt="Photo de profil"
                                    class="menu-profile-img"
                                    onerror="this.src='{{ asset('assets/images/default-avatar.jpg') }}'">
                            {% else %}
                                <img src="{{ asset('assets/images/default-avatar.jpg') }}"
                                    alt="Photo de profil"
                                    class="menu-profile-img">
                            {% endif %}
                            <div class="user-details">
                                <h4>{{ user.fullName }}</h4>
                                <p>Membre {% if 'ROLE_PREMIUM' in user.roles %}Premium{% else %}Standard{% endif %}</p>
                            </div>
                        </div>

                        <div class="dropdown-divider"></div>

                        <a href="{{ path('app_profil') }}" class="dropdown-item">
                            <i class="fas fa-user-circle"></i>
                            <span>Mon Profil</span>
                        </a>

                        <a href="{{ path('app_dashboard') }}" class="dropdown-item active">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Tableau de bord</span>
                        </a>

                        <a href="#" class="dropdown-item">
                            <i class="fas fa-chart-line"></i>
                            <span>Mes Statistiques</span>
                        </a>

                        <div class="dropdown-divider"></div>

                        <!-- FORMULAIRE DE D√âCONNEXION (POST avec CSRF) -->
                        <form action="{{ path('app_logout') }}" method="POST" class="logout-form">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                            <button type="submit" class="dropdown-item logout">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>D√©connexion</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Sidebar -->
        <aside class="dashboard-sidebar">
            <div class="sidebar-header">
                <h3><i class="fas fa-bars"></i> Menu</h3>
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-chevron-left"></i>
                </button>
            </div>

            <nav class="sidebar-menu">
                <a href="#" class="menu-item active">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Tableau de bord</span>
                </a>

                <div class="menu-section">
                    <h4>Sant√© & Fitness</h4>

                    <a href="#" class="menu-item">
                        <i class="fas fa-utensils"></i>
                        <span>R√©gime alimentaire</span>
                        <span class="badge">Nouveau</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-dumbbell"></i>
                        <span>Workout personnalis√©</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Planning d'entra√Ænement</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span>Salle de sport proche</span>
                    </a>
                </div>

                <div class="menu-section">
                    <h4>Expertise</h4>

                    <a href="#" class="menu-item">
                        <i class="fas fa-user-md"></i>
                        <span>Nutritionniste expert</span>
                    </a>

                    <a href="{{ path('app_communaute') }}" class="menu-item">
                        <i class="fas fa-users"></i>
                        <span>Communaut√©</span>
                        <span class="badge">{{ getTotalUsers() }}</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-building"></i>
                        <span>Partenaires fitness</span>
                    </a>
                </div>

                <div class="menu-section">
                    <h4>Progression</h4>

                    <a href="#" class="menu-item">
                        <i class="fas fa-chart-line"></i>
                        <span>Mes progr√®s</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-trophy"></i>
                        <span>Mes objectifs</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-award"></i>
                        <span>Mes badges</span>
                        <span class="badge">8</span>
                    </a>
                </div>

                <div class="menu-section">
                    <h4>Ressources</h4>

                    <a href="#" class="menu-item">
                        <i class="fas fa-book"></i>
                        <span>Guide sant√©</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-video"></i>
                        <span>Vid√©os d'exercices</span>
                    </a>

                    <a href="#" class="menu-item">
                        <i class="fas fa-file-alt"></i>
                        <span>Rapports mensuels</span>
                    </a>
                </div>
            </nav>

            <div class="sidebar-footer">
                <div class="user-progress">
                    <div class="progress-info">
                        <span>Progression mensuelle</span>
                        <span>65%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 65%"></div>
                    </div>
                </div>

                <button class="premium-btn">
                    <i class="fas fa-crown"></i>
                    Passer √† Premium
                </button>
            </div>
        </aside>

        <!-- Contenu principal -->
        <main class="dashboard-content">
            <!-- Cartes de bienvenue et stats rapides -->
            <div class="welcome-section">
                <div class="welcome-card">
                    <h2>Bonjour, <span class="user-name">{{ user.fullName }}</span> üëã</h2>
                    <p>Vous avez compl√©t√© {{ dashboard.quick_stats.workouts_this_week }} entra√Ænements cette semaine. Continuez comme √ßa !</p>
                    <div class="welcome-stats">
                        <div class="stat">
                            <i class="fas fa-fire"></i>
                            <div>
                                <h4>{{ dashboard.quick_stats.calories_burned|number_format(0, ',', ' ') }}</h4>
                                <span>Calories br√ªl√©es</span>
                            </div>
                        </div>
                        <div class="stat">
                            <i class="fas fa-running"></i>
                            <div>
                                <h4>{{ dashboard.quick_stats.distance }}km</h4>
                                <span>Distance parcourue</span>
                            </div>
                        </div>
                        <div class="stat">
                            <i class="fas fa-heartbeat"></i>
                            <div>
                                <h4>{{ dashboard.quick_stats.avg_bpm }}</h4>
                                <span>BPM moyenne</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="date-card">
                    <h3><i class="fas fa-calendar-day"></i> Aujourd'hui</h3>
                    <div class="current-date">
                        <div class="date-day">{{ "now"|date("d") }}</div>
                        <div class="date-month">{{ "now"|date("F Y") }}</div>
                    </div>
                    <div class="next-workout">
                        {% set nextWorkout = dashboard.workouts|filter(w => w.status == 'pending')|first %}
                        {% if nextWorkout %}
                            <p>Prochain entra√Ænement: <strong>{{ nextWorkout.name }} ({{ nextWorkout.time }})</strong></p>
                            <button class="btn-start">Commencer</button>
                        {% else %}
                            <p>Aucun entra√Ænement pr√©vu aujourd'hui</p>
                            <button class="btn-start">Planifier</button>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Graphiques et statistiques -->
            <div class="charts-section">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3>Progression hebdomadaire</h3>
                        <select class="chart-select">
                            <option>Cette semaine</option>
                            <option>Ce mois</option>
                            <option>Cette ann√©e</option>
                        </select>
                    </div>
                    <div class="chart-container">
                        <canvas id="progressChart"
                                data-labels="{{ dashboard.weekly_progress.labels|json_encode }}"
                                data-calories="{{ dashboard.weekly_progress.calories|json_encode }}"
                                data-distance="{{ dashboard.weekly_progress.distance|json_encode }}">
                        </canvas>
                    </div>
                </div>

                <div class="chart-card">
                    <div class="chart-header">
                        <h3>R√©partition des calories</h3>
                        <div class="chart-legend">
                            <span class="legend-item"><i class="fas fa-circle" style="color: #4CAF50;"></i> Prot√©ines ({{ dashboard.nutrition.proteins }}%)</span>
                            <span class="legend-item"><i class="fas fa-circle" style="color: #2196F3;"></i> Glucides ({{ dashboard.nutrition.carbs }}%)</span>
                            <span class="legend-item"><i class="fas fa-circle" style="color: #FF9800;"></i> Lipides ({{ dashboard.nutrition.fats }}%)</span>
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="caloriesChart"
                                data-proteins="{{ dashboard.nutrition.proteins }}"
                                data-carbs="{{ dashboard.nutrition.carbs }}"
                                data-fats="{{ dashboard.nutrition.fats }}">
                        </canvas>
                    </div>
                </div>
            </div>

            <!-- Entra√Ænements et r√©gime -->
            <div class="workout-diet-section">
                <div class="workout-plan">
                    <div class="section-header">
                        <h3><i class="fas fa-dumbbell"></i> Entra√Ænement du jour</h3>
                        <a href="#" class="view-all">Voir le planning complet <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <div class="workout-list">
                        {% for workout in dashboard.workouts %}
                            <div class="workout-item">
                                <div class="workout-icon">
                                    {% if workout.name == 'Cardio Training' %}
                                        <i class="fas fa-running"></i>
                                    {% elseif workout.name == 'Musculation' %}
                                        <i class="fas fa-dumbbell"></i>
                                    {% elseif workout.name == 'Natation' %}
                                        <i class="fas fa-water"></i>
                                    {% else %}
                                        <i class="fas fa-dumbbell"></i>
                                    {% endif %}
                                </div>
                                <div class="workout-details">
                                    <h4>{{ workout.name }}</h4>
                                    <p>{{ workout.duration }} min ‚Ä¢
                                    {% if workout.calories is defined %}
                                        Br√ªle {{ workout.calories }} calories
                                    {% elseif workout.type is defined %}
                                        {{ workout.type }}
                                    {% endif %}
                                    </p>
                                </div>
                                <div class="workout-status {{ workout.status }}">
                                    {% if workout.status == 'completed' %}
                                        <i class="fas fa-check"></i>
                                        Termin√©
                                    {% elseif workout.status == 'pending' %}
                                        <i class="fas fa-clock"></i>
                                        {{ workout.time }}
                                    {% elseif workout.status == 'upcoming' %}
                                        <i class="fas fa-calendar"></i>
                                        {{ workout.time }}
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="diet-plan">
                    <div class="section-header">
                        <h3><i class="fas fa-utensils"></i> Repas recommand√©s</h3>
                        <a href="#" class="view-all">Voir le menu complet <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <div class="meal-list">
                        {% for meal in dashboard.meals %}
                            <div class="meal-item">
                                <div class="meal-time">{{ meal.time }}</div>
                                <div class="meal-details">
                                    <h4>{{ meal.name }}</h4>
                                    <p>{{ meal.calories }} kcal ‚Ä¢ {{ meal.proteins }}g prot√©ines</p>
                                </div>
                                <div class="meal-check">
                                    {% if meal.completed %}
                                        <i class="fas fa-check-circle" style="color: #2e7d32;"></i>
                                    {% else %}
                                        <i class="far fa-circle"></i>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Salle de sport et communaut√© -->
            <div class="gym-community-section">
                <div class="gym-card">
                    <div class="section-header">
                        <h3><i class="fas fa-map-marker-alt"></i> Salles de sport proches</h3>
                        <button class="btn-refresh"><i class="fas fa-sync-alt"></i></button>
                    </div>

                    <div class="gym-list">
                        <div class="gym-item">
                            <div class="gym-info">
                                <h4>Fitness First</h4>
                                <p><i class="fas fa-map-marker"></i> 1.2 km ‚Ä¢ Ouvert 24h/24</p>
                                <div class="gym-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                    <span>4.5 (128 avis)</span>
                                </div>
                            </div>
                            <button class="btn-direction">
                                <i class="fas fa-directions"></i> Itin√©raire
                            </button>
                        </div>

                        <div class="gym-item">
                            <div class="gym-info">
                                <h4>Urban Fit Club</h4>
                                <p><i class="fas fa-map-marker"></i> 2.5 km ‚Ä¢ Piscine incluse</p>
                                <div class="gym-rating">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <span>4.0 (89 avis)</span>
                                </div>
                            </div>
                            <button class="btn-direction">
                                <i class="fas fa-directions"></i> Itin√©raire
                            </button>
                        </div>
                    </div>
                </div>

                <div class="community-card">
                    <div class="section-header">
                        <h3><i class="fas fa-users"></i> Communaut√© active</h3>
                        <a href="#" class="view-all">Voir tous <i class="fas fa-arrow-right"></i></a>
                    </div>

                    <div class="community-members">
                        <div class="member">
                            <img src="https://randomuser.me/api/portraits/women/32.jpg" alt="Membre">
                            <div class="member-info">
                                <h5>Marie L.</h5>
                                <p>15 entra√Ænements cette semaine</p>
                            </div>
                            <button class="btn-follow">Suivre</button>
                        </div>

                        <div class="member">
                            <img src="https://randomuser.me/api/portraits/men/54.jpg" alt="Membre">
                            <div class="member-info">
                                <h5>Pierre D.</h5>
                                <p>Perdu 5kg ce mois-ci</p>
                            </div>
                            <button class="btn-follow">Suivre</button>
                        </div>

                        <div class="member">
                            <img src="https://randomuser.me/api/portraits/women/67.jpg" alt="Membre">
                            <div class="member-info">
                                <h5>Sophie T.</h5>
                                <p>Partage 3 nouvelles recettes</p>
                            </div>
                            <button class="btn-following">
                                <i class="fas fa-check"></i> Suivi
                            </button>
                        </div>
                    </div>

                    <div class="community-challenge">
                        <h4>D√©fi du mois: 100km en course</h4>
                        <div class="challenge-progress">
                            <div class="progress-info">
                                <span>Votre progression: 42km</span>
                                <span>42%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: 42%"></div>
                            </div>
                        </div>
                        <button class="btn-challenge">Participer</button>
                    </div>
                </div>
            </div>
        </main>

        <!-- Chatbot -->
        <div class="chatbot-widget" id="chatbotWidget">
            <div class="chatbot-header">
                <div class="chatbot-title">
                    <i class="fas fa-robot"></i>
                    <span>Assistant HealFit</span>
                </div>
                <button class="chatbot-close" id="closeChatbot">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="chatbot-messages" id="chatbotMessages">
                <div class="message bot">
                    <div class="message-content">
                        Bonjour ! Je suis votre assistant HealFit. Comment puis-je vous aider aujourd'hui ?
                    </div>
                    <div class="message-time">Maintenant</div>
                </div>
            </div>

            <div class="chatbot-input">
                <input type="text" id="chatbotInput" placeholder="Posez-moi une question...">
                <button id="sendMessage">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
        </div>

        <!-- Bouton d'ouverture du chatbot -->
        <button class="chatbot-toggle" id="openChatbot">
            <i class="fas fa-robot"></i>
        </button>
    </div>

    <!-- JavaScript -->
    <script src="{{ asset('js/dashboard.js') }}"></script>
</body>
</html>
