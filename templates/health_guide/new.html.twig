            background-size: 16px;
            padding-right: 40px;
        }

        /* Boutons d'action */
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid var(--light-gray);
        }

        .btn-publish {
            background: linear-gradient(135deg, var(--primary), var(--primary-dark));
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1rem;
        }

        .btn-publish:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(46, 125, 50, 0.3);
        }

        .btn-cancel {
            background-color: var(--light-gray);
            color: var(--dark);
            border: none;
            padding: 12px 30px;
            border-radius: var(--radius-sm);
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            font-size: 1rem;
        }

        .btn-cancel:hover {
            background-color: #e0e0e0;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .dashboard-container {
                grid-template-columns: 1fr;
                grid-template-rows: 70px auto 1fr;
            }

            .dashboard-sidebar {
                position: fixed;
                left: -280px;
                top: 70px;
                height: calc(100vh - 70px);
                z-index: 999;
                transition: left 0.3s ease;
            }

            .dashboard-sidebar.active {
                left: 0;
            }

            .dashboard-content {
                grid-column: 1;
                padding: 20px;
            }
        }

        @media (max-width: 768px) {
            .dashboard-navbar {
                padding: 0 15px;
            }

            .dashboard-title {
                display: none;
            }

            .form-card {
                padding: 20px;
            }
        }

        @media (max-width: 576px) {
            .welcome-card, .date-card {
                padding: 20px;
            }

            .welcome-card h2 {
                font-size: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-publish, .btn-cancel {
                justify-content: center;
            }
        }
    </style>
</head>
